{
  "compilerOptions": {
    "target": "ES2021",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
